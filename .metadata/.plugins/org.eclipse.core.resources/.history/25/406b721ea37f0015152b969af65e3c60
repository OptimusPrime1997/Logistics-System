package test;

import java.util.LinkedList;
import java.util.Scanner;

public class Test3 {
	
	private static class Node{  
        int coef;
        int exp;
        Node next;  
        public Node(int a, int b){  
            this.coef = a; 
            this.exp = b;
            this.next = null;  
        }  
    }

	public static void main(String[] args){
		LinkedList<int[]> l1 = new LinkedList<int[]>();
		LinkedList<int[]> l2 = new LinkedList<int[]>();
		Scanner in = new Scanner(System.in);
		
		System.out.println("请按顺序输入多项式l1，系数和幂用空格分隔"); 
	        Node head1 = null;  
	        if(in.hasNextInt()){  
	            head1 = new Node(in.nextInt(),in.nextInt());  
	        } 
	        Node temp = head1;  
	        while(in.hasNextInt()){  
	            temp.next = new Node(in.nextInt(),in.nextInt());  
	            temp = temp.next;  
	        }  
	        in.close();  
	        
		System.out.println("请按顺序输入多项式l2，系数和幂用空格分隔");
			
	}
}
