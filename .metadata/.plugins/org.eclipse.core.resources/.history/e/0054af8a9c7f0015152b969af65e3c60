package test;

import java.util.LinkedList;
import java.util.Scanner;

public class Test3 {
	public static void main(String[] args){
		LinkedList<int[]> l1 = new LinkedList<int[]>();
		LinkedList<int[]> l2 = new LinkedList<int[]>();
		Scanner in = new Scanner(System.in);
		int[] item = new int[2];
		int i,j;
		System.out.println("请按顺序输入多项式l1，系数和幂用空格分隔.幂为-1退出循环");
		while(true){
			item[0] = in.nextInt();
			item[1] = in.nextInt();
			if(item[1]==-1)
				break;
			l1.add(item);
		}
		System.out.println("请按顺序输入多项式l2，系数和幂用空格分隔.幂为-1退出循环");
		while(true){
			item[0] = in.nextInt();
			item[1] = in.nextInt();
			if(item[1]==-1)
				break;
			l2.add(item);
		}
		while(i<l1.size()&&j<l2.size()){
			
		}
//		System.out.println(l1.get(0)[1]);
	}
}
