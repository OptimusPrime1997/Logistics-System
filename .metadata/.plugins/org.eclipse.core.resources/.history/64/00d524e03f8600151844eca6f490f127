    	try {
			BufferedReader read = new BufferedReader(new FileReader("src/save.txt"));
			s = read.readLine();
			if(s!=null){
				jTextField2.setText(s);
			}
			read.close();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
    	if(first)
    		random();
    }
    
    private void random(){
		jButton1.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				
				Runnable threadjob = new ThreadRandom();
				Thread myThread = new Thread(threadjob);
				myThread.start();
				
			}
		});
		
	}
    
    class ThreadRandom implements Runnable{
    	
		@Override
		public void run() {
			first = false;
			// TODO Auto-generated method stub
			int i = 0;
			for (int k = 0; k < 30; k++) {
				i = (int) (Math.random() * 94)+1;
				jTextField2.setText(i + "");
				jPanel1.repaint();
				try {
					Thread.sleep(50);

				} catch (InterruptedException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
				try {
					FileWriter writer = new FileWriter("src/save.txt");
					writer.write(i+"");
					writer.close();
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}
    }
    
