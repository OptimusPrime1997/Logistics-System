		ArrayList<OutStockRepVO> outreps = new ArrayList<OutStockRepVO>();
		for(int i = 0;i < 10;++i) {
			outreps.addAll(outrep.getbyDate(startDate));
		}
		MockStockNum stocknum = new MockStockNum();
