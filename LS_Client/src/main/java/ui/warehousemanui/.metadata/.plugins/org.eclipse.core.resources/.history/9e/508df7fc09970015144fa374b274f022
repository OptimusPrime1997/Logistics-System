	/**
	 * 检查起始日期是否在结束日期之前
	 * @param startMonth
	 * @param startDay
	 * @param endMonth
	 * @param endDay
	 * @return
	 */
	private boolean checkDateValid(String startMonth, String startDay,
			String endMonth, String endDay){
		boolean valid = false;
		int sm = Integer.parseInt(startMonth);
		int sd = Integer.parseInt(startDay);
		int em = Integer.parseInt(endMonth);
		int ed = Integer.parseInt(endDay);
		
		if(sm<em||(sm==em&&sd<=ed)){
			valid = true;
		}
		return valid;
		
	}
	
